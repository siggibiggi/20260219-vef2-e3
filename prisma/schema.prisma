generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// Data model
model News {
  id        Int     @id @default(autoincrement())
  slug      String     @unique
  title     String
  excerpt   String
  content   String
  published Boolean @default(false)
  author    Author   @relation(fields:  [authorId], references: [id])
  authorId  Int
}

model Author {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
  posts News[]
}

